{# templates/category/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}List of Categories{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>List of Categories</span>
                    <a href="{{ path('category_create') }}" class="btn btn-sm btn-primary">Add</a>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                                <td class="d-flex justify-content-around align-items-center">
                                    <a href="{{ path('category_show', {id: category.id}) }}" class="btn btn-sm btn-dark">Show</a>
                                    <a href="{{ path('category_edit', {id: category.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="{{ path('category_copy', {id: category.id}) }}" class="btn btn-sm btn-info">Copy</a>
                                    <a href="{{ path('category_delete', {id: category.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
